{
  "compilerOptions": {
    "typeRoots": ["./typings", "./node_modules/@types"],
    "outDir": "./dist",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "noErrorTruncation": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
